import 'package:flutter/material.dart';

class TurnByTurnDirections extends StatelessWidget {
  final Map<String, dynamic> currentDirection;
  const TurnByTurnDirections({Key? key, required this.currentDirection}) : super(key: key);

  @override
  Widget build(BuildContext context) {
    return Container(
      margin: const EdgeInsets.symmetric(horizontal: 8.0),
      padding: const EdgeInsets.all(12.0),
      decoration: BoxDecoration(
        color: Colors.white,
        borderRadius: BorderRadius.circular(10),
      ),
      child: Text(
        "${currentDirection['instruction']} em ${currentDirection['distance']}",
        style: TextStyle(fontSize: 16, fontWeight: FontWeight.bold),
      ),
    );
  }
}